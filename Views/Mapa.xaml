<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E18083.Views.Mapa"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             Title="">
    <VerticalStackLayout>
        <Grid>
            <maps:Map x:Name="mapa"
              MapType="Street"
              IsShowingUser="True"
              VerticalOptions="FillAndExpand" />
            
            
        </Grid>

        <Button
x:Name="btnCompartir"
Margin="0,30,0,0"
Background="Black" TextColor="White" FontAttributes="Bold"
WidthRequest="200"
HeightRequest="50"
Clicked="btnCompartir_Clicked"
HorizontalOptions="Center"
SemanticProperties.Hint="Compartir"
Text="Compartir Imagen" />


    </VerticalStackLayout>
</ContentPage>